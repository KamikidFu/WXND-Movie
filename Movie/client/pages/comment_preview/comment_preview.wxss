/* pages/movie_preview/movie_preview.wxss */
.movie{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movieImg{
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  margin-top: 40rpx;
  z-index: 2;
  border: solid 1rpx gainsboro;
}
.movieContent{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 110rpx 30rpx 52rpx;
  background: #FFFFFF;
  border-radius: 13rpx; 
  border: solid 1rpx gainsboro;
}
.movieInfo{
  padding: 300rpx 90rpx 0;
}
.movieTitle{
  text-align: center;
  font-weight: bold;
  font-size: 38rpx;
  line-height: 53rpx;
}
.movieComment{
  margin-top: 50rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.comment{
  width: 400rpx;
  height: 300rpx;
  text-align: center;
}
.record{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
  padding: 20rpx 0; 
  width: 200rpx;
  border-radius: 13rpx;
  border: solid 1rpx gainsboro;
  font-size: 35rpx;
  line-height: 49rpx;
  color: gray;
  background-color: #fff;
}
.recorderImg{
  margin-right: 10rpx; 
  width: 40rpx;
  height: 40rpx;
}
.buttons{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.buttonsFunction{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 150rpx 20rpx 50rpx;
  padding: 20rpx 50rpx;
  border-radius: 13rpx;
  border: solid 1rpx gainsboro;
  font-size: 35rpx;
  line-height: 49rpx;
  color: gray;
  background-color: #fff;
}
.buttonsFunction image{
  margin-right: 10rpx; 
  width: 40rpx;
  height: 40rpx;
}