/* pages/user_panel/user_panel.wxss */
.user{
  padding-top: 40rpx;
}
.category{
  text-align: center;
  font-size: 30rpx;
  line-height: 42rpx;
  font-weight: bold;
  color: rgba(248, 215, 200, 1);
}
.comments, .pub-comments{
  margin-top: 50rpx;
}
.commentsList, .pub-commentsList{
  margin: 40rpx 50rpx 20rpx;
  display: flex;
  flex-direction: row;
  background: #FFFFFF;
}
.movieImg, .pub-movieImg{
  width: 200rpx;
  height: 230rpx;
}
.movieCommentContent, .pub-movieCommentContent{
  height: 230rpx;
  width: 550rpx;
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
}
.movieTitle, .pub-movieTitle{
  margin-top: 30rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  font-weight: bold;
}
.movieComment, .pub-movieComment{
  font-size: 30rpx;
  line-height: 42rpx;
  margin: 10rpx 0;
  min-height: 80rpx;
}
.movieCommentUser, .pub-movieCommentUser{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.userImg, .pub-userImg{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.userName, .pub-userName{
  font-size: 30rpx;
  line-height: 42rpx;
  color: gray;
  margin-left: 20rpx;
}

.tab-wrapper {
  display: flex;
  justify-content: space-around;
  padding: 32rpx 0;
  
}


.tab-item {
  font-size: 35rpx;
  line-height: 49rpx;
  color: orange;
}

.record, .pub-record{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin: 50rpx 0;
  padding: 20rpx 0; 
  width: 200rpx;
  border-radius: 13rpx;
  border: solid 1rpx gainsboro;
  font-size: 35rpx;
  line-height: 49rpx;
  color: gray;
  background-color: #fff;
}
.recorderImg, .pub-recorderImg{
  margin-right: 10rpx; 
  width: 40rpx;
  height: 40rpx;
}

.unlogin {
  display: flex;
  align-items: center;
  padding-right: 27rpx;
  margin: 50rpx 27rpx;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.unlogin-note {
  flex: 1;
  margin-left: 48rpx;
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}


.login-btn {
  margin: 34rpx auto 0;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #c8c9c8;
  border-radius: 10rpx;
  font-size: 30rpx;
  text-align: center;
  color: #34373D;
  font-weight: bold;
}