/* pages/add_comment/add_comment.wxss */
.movie{
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.movieImg{
  width: 250rpx;
  height: 250rpx;
  position: absolute;
  margin-top: 40rpx;
  z-index: 2;
  border: solid 1rpx gainsboro;
}
.movieContent{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 110rpx 30rpx 52rpx;
  background: #FFFFFF;
  border-radius: 12rpx; 
  border: solid 1rpx gainsboro;
}
.movieInfo{
  padding: 300rpx 90rpx 0;
}
.movieTitle{
  text-align: center;
  font-weight: bold;
  font-size: 38rpx;
  line-height: 53rpx;
}
.movieComment{
  margin-top: 50rpx;
  font-size: 35rpx;
  line-height: 49rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.comment{  
  width: 500rpx;
  height: 300rpx;
  text-align: center;
}
.buttons{
  width: 690rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.buttonsFuntion{
  display: flex;
  flex-direction: row;
  justify-content: center;
  margin: 50rpx 20rpx 50rpx;
  padding: 20rpx 50rpx; 
  border-radius: 12rpx;
  border: solid 1rpx gainsboro;
  font-size: 35rpx;
  line-height: 49rpx;
  color: gray;
  background-color: #fff;
}
.buttonsFuntion image{
  margin-right: 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.commentComplete{
  background-color: rgb(0, 189, 0); 
  border: solid 1px rgb(0, 189, 0);
  color: greenyellow;
}
.commentComplete.null{
  color: rgba(52, 55, 61, 0.5);
  border: solid 1px #fff;
  background-color: #fff;
}
